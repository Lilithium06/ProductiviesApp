<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ProductiviesApp.ViewModels"
             x:Class="ProductiviesApp.Views.SkillCreationPage"
             x:DataType="viewModels:SkillCreationViewModel">
    <ContentPage.BindingContext>
        <viewModels:SkillCreationViewModel></viewModels:SkillCreationViewModel>
    </ContentPage.BindingContext>
    
    <Grid>
        <StackLayout>
            <Label Text="Name:"/>
            <Entry Text="{Binding Name}"/>
            
            <Button Text="Save" Command="{Binding SaveCommand}"/>
        </StackLayout>
    </Grid>
</ContentPage>