<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ProductiviesApp.ViewModels"
             xmlns:models="clr-namespace:ProductiviesApp.Models"
             x:Class="ProductiviesApp.Views.SkillsListPage"
             x:DataType="viewModels:SkillListViewModel">
    <ContentPage.BindingContext>
        <viewModels:SkillListViewModel></viewModels:SkillListViewModel>
    </ContentPage.BindingContext>

    <Grid>
        <ListView RowHeight="100" ItemsSource="{Binding AllSkills}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:SkillModel">
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Name}" FontSize="Large" />
                            <Label Text="{Binding Level, StringFormat='Lv. {0}'}" FontSize="Medium" />
                            <Label Text="{Binding Exp}" FontSize="Medium" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Command="{Binding GoToSkillCreationPageCommand}" Text="Add" VerticalOptions="End" HorizontalOptions="End" />
    </Grid>
</ContentPage>