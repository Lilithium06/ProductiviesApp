<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProductiviesApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ProductiviesApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ProductiviesApp">

    <Shell.Resources>
        <Style TargetType="TabBar">
            <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource Surface}" />
            <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource TextSecondary}" />
            <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource Primary}" />
        </Style>
    </Shell.Resources>

    <TabBar>
        <ShellContent
            Title="Quests"
            Shell.NavBarIsVisible="False"
            ContentTemplate="{DataTemplate views:QuestListPage}"
            Route="QuestListPage" />

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"
            Shell.NavBarIsVisible="False"
            Route="MainPage" />

        <ShellContent
            Title="Skills"
            ContentTemplate="{DataTemplate views:SkillsListPage}"
            Shell.NavBarIsVisible="False"
            Route="SkillsListPage" />
    </TabBar>
</Shell>