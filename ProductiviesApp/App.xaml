<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ProductiviesApp"
             x:Class="ProductiviesApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#00FF00</Color>
            <Color x:Key="Secondary">#0000FF</Color>
            <Color x:Key="Accent">#FF0000</Color>
            <Color x:Key="Background">#000000</Color>
            <Color x:Key="Surface">#444444</Color>
            <Color x:Key="Text">#FFFFFF</Color>
            <Color x:Key="TextSecondary">#CCCCCC</Color>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>